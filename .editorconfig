# EditorConfig

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{tex,bib,py}]
charset = utf-8

# 4 space indentation [just for python files]
[*.py]
indent_style = space
indent_size = 4

# 2 space identation for tex files [or more]
[*.tex]
indent_style = space
indent_size = 2

# Force zero identation for bib files
[*.bib]
indent_style = space
indent_size = 0

# Tab indentation [just for makefiles]
[Makefile]
indent_style = tab

